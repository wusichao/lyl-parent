      <version>3.8.1</version>
      <scope>test</scope>
    </dependency>					
  </dependencies>
  <profiles>
		<profile>
			<id>test</id>
			<activation>
				<activeByDefault>true</activeByDefault>
			</activation>
			<build>
				<filters>
					<filter>
						src/main/resources/sysConfig/test.properties
					</filter>
				</filters>
				<resources>
					<resource>
						<!-- 指明资源的路径 -->
						<directory>src/main/resources</directory>
						<!-- 是否使用参数值代替参数名 -->
						<filtering>true</filtering>
